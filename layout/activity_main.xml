<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dev By ghalwash @Mrfa0gh"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/check_fingerprint_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Fingerprint"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_text_view"
        android:layout_marginTop="32dp"/>

    <!-- Ensure that you use the correct image resource name here -->
    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/check_fingerprint_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo_description" />

    <Button
        android:id="@+id/my_website_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Website"
        android:layout_below="@id/logo_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
